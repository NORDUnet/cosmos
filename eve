usage ()
{
    echo "\
Usage: eve [OPTION...] COMMAND [COMMAND-OPTION...]

Eve is meant for system administrators who wants to centralize and
automate system configuration and package installation.

The COMMAND specify the action sequence performed by the tool.
Currently COMMAND may be 'overlay', 'delete', or 'tasks'.

Common options:

  -h, --help                show this help text.
  -V, --version             show version information.
  -v, --verbose             Increase verbosity.

Parameters to 'overlay', 'delete', and 'tasks' commands:

  -n, --dry-run             do nothing except print what should be done

Report bugs to <sysadmin@yubico.com>." 1>&2
}

version ()
{
    echo "\
eve (Eve) 1.0
Copyright (C) 2012 Simon Josefsson
License GPLv3+: GNU GPL version 3 or later <http://gnu.org/licenses/gpl.html>
This is free software: you are free to change and redistribute it.
There is NO WARRANTY, to the extent permitted by law.

Written by Simon Josefsson."
}

# Read configuration file.
{
    if test -z "$EVE_CONF_DIR"; then
	EVE_CONF_DIR=/etc/eve
    fi

    EVE_CONF="$EVE_CONF_DIR/eve.conf"

    if test -e $EVE_CONF; then
	set -a
	. $EVE_CONF
	set +a
    fi

    export EVE_CONF EVE_CONF_DIR
}

# Command line parsing.
{
    verbose=

    while test $# -gt 0; do
	case "$1" in
	    --dry-run | -n)
		dryrun=y
		shift ;;
	    --verbose | -v)
		verbose=y
		shift ;;
	    --help | -h )
		usage
		exit 0 ;;
	    --version | -V )
		version
		exit 0 ;;
	    -- )
        # Stop option processing
		shift
		break ;;
	    -* )
		echo "eve: unknown option $1" 1>&2
		echo "Try 'eve --help' for more information." 1>&2
		exit 1 ;;
	    * )
		break ;;
	esac
    done

    if test -z "$@"; then
	usage
	exit 0
    fi
}

cmd="$1"
shift

dir="$EVE_CONF_DIR/$cmd.d"

if ! test -d "$dir"; then
    echo "eve: unknown command '$cmd'" 1>&2
    echo "Try 'eve --help' for more information." 1>&2
    exit 1
fi

parts=$(find $dir/ -mindepth 1 -maxdepth 1 \
    -type f -executable \! -name \*~ | sort -n)

if test -z "$parts"; then
    echo "eve: command '$cmd' does not do anything" 1>&2
    echo "Try 'eve --help' for more information." 1>&2
    exit 1
fi

test -z $verbose || echo "Enumerating $dir parts as $parts"

for part in "$parts"; do
    test -z $verbose || echo "Invoking $part $@"
    "$part" "$@"
done

exit 0
